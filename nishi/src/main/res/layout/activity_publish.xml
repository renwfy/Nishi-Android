<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_green"
        android:orientation="horizontal"
        android:padding="@dimen/padding_comm">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_comm"
            android:layout_weight="1"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_comm" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="发布"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_dark"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_green"
        android:orientation="horizontal"
        android:padding="@dimen/padding_comm">

        <LinearLayout
            android:id="@+id/lla1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lagger2"
            android:layout_marginRight="@dimen/margin_lagger2"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="美食"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_comm" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="@dimen/margin_lagger2"
                android:layout_marginRight="@dimen/margin_lagger2"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/white"
                android:visibility="visible"></View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lla2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lagger2"
            android:layout_marginRight="@dimen/margin_lagger2"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_comm" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="@dimen/margin_lagger2"
                android:layout_marginRight="@dimen/margin_lagger2"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/white"
                android:visibility="invisible"></View>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <nishi.android.view.ViewFoodPublish
            android:id="@+id/foodpublish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></nishi.android.view.ViewFoodPublish>

        <nishi.android.view.ViewActivityPublish
            android:visibility="gone"
            android:id="@+id/activitypublish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></nishi.android.view.ViewActivityPublish>
    </RelativeLayout>
</LinearLayout>
